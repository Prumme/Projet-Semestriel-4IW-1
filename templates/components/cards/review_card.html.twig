<div class="flex">
    {% if profile_picture is defined %}
        <img src="{{ profile_picture }}" alt="Profile Picture" class="w-16 h-16 rounded-full">
    {% endif %}
    <div class="flex flex-col justify-center mx-5">
        <h1 class="text-lg font-semibold">{{ name }}</h1>
        <span class="text-xs text-black font-medium mt-2">{{ job }}</span>
    </div>
</div>
<div class="mt-3">
    {% if content is defined %}
        <p class="text-xs text-black/70 leading-loose">{{ content }}</p>
    {% endif %}
</div>
