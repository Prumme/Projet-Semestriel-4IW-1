<div data-bind-component="select" {{ form.vars.multiple ? 'data-multiple' }} data-placeholder="{{ form.vars.placeholder | default("Séléctionner") }}" id="{{ form.vars.id  }}" tabindex="1" class="relative w-full p-2.5 mt-2 rounded border-2 border-primary-500 text-primary-500 cursor-pointer hover:focus:border-secondary-500 hover:focus:text-secondary-500">
    {% set name =  form.vars.full_name %}
    {% set type = form.vars.multiple ? 'checkbox' : 'radio' %}
    <div class="flex justify-between items-center">
        <span data-type="label">{{form.vars.placeholder | default('Select')}}</span>
        <ion-icon name="chevron-down-outline"></ion-icon>
    </div>
    <ul class="hidden absolute top-full left-0 right-0 max-h-[200px] bg-white shadow-primary-200 shadow rounded z-10 overflow-y-auto" onclick="(e)=>e.preventDefault()">
        {% if not form.vars.multiple %}
            <li class="px-4 py-2 cursor-pointer  text-primary-500 flex items-center gap-4 hover:bg-primary-200">
                <input type="{{type}}" id="{{ form.vars.id ~ "_-1" }}" name="{{name}}" value="" {{ form.vars.value == '' ? 'checked' : '' }} class="hidden" >
                <label for="{{ form.vars.id ~ "_-1" }}" class="flex-grow cursor-pointer">  {{ form.vars.placeholder | default('Select') }}</label>
            </li>
        {% endif %}
        {% for item in form.vars.choices %}
           {% set checked = form.vars.multiple ? item.value in form.vars.value : item.value == form.vars.value  %}
            <li class="px-4 py-2 cursor-pointer  text-primary-500 flex items-center gap-4 hover:bg-primary-200 {{ checked ? 'bg-primary-200' : '' }} ">
                <input type="{{type}}" id="{{ form.vars.id ~ "_" ~ loop.index0 }}" name="{{name}}" value="{{ item.value }}" {{ checked ? 'checked' : '' }} class="{{form.vars.multiple ? '' :  'hidden'}}" >
                <label for="{{ form.vars.id ~ "_" ~ loop.index0 }}" class="flex-grow cursor-pointer">  {{ item.label }}</label>
            </li>
        {% endfor %}
    </ul>
</div>