{# HOW TO USE IT

{% include 'components/inputs/input.html.twig' with {
            'label': 'Email' OPT,
            'name': 'email' OPT,
            'type': 'email' OPT,
            'placeholder': 'Email' OPT,
            'value': last_username OPT,
            'required': true OPT,
            'autofocus': true OPT,
            'icon':'mail' OPT
} %}

/HOW TO USE IT #}
<div class="inline-flex flex-col {{ class|default('') }}">
    {% if label is defined %}
        {% include 'components/inputs/formLabel.html.twig' with {
            label: label ?? null,
            id: id ?? null,
            icon: icon ?? null
        }%}
    {% endif %}
    {% if required is defined %}
    <input
            autocomplete="off"
            type="{{ type|default('text') }}"
            name="{{ (name ?? label) |default('') }}"
            class="w-full px-0 py-2.5 border-0 border-b-2 border-secondary-500 text-primary-500 focus:border-primary-500 focus:text-secondary-500 focus:ring-0"
            id="{{ id|default('') }}"
            required="{{ required|default('') }}"
            placeholder="{{ placeholder|default('') }}"
            value="{{ value|default('') }}"
    >
    {% else %}
    <input
            autocomplete="off"
            type="{{ type|default('text') }}"
            name="{{ (name ?? label) |default('') }}"
            class="w-full px-0 py-2.5 border-0 border-b-2 border-secondary-500 text-primary-500 focus:border-primary-500 focus:text-secondary-500 focus:ring-0"
            id="{{ id|default('') }}"
            placeholder="{{ placeholder|default('') }}"
            value="{{ value|default('') }}"
    >
    {% endif %}

</div>
