{% set uniqueId = random() %}
<span class="loader-{{ uniqueId }} border-{{ color | default('primary-500') }}"></span>
<style>
    .loader-{{ uniqueId }} {
        width: {{ size | default('48px') }};
        height: {{ size | default('48px') }};
        border: {{ weight | default('5px') }} solid;
        border-bottom-color: transparent;
        border-radius: 50%;
        display: inline-block;
        box-sizing: border-box;
        animation: rotation{{ uniqueId }} 1s linear infinite;
    }

    @keyframes rotation{{ uniqueId }} {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>