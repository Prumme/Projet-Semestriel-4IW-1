<header class="relative z-50">
	<nav class="bg-primary_darken">
		<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
			<a href="/" class="flex items-center">
				<img src="{{ asset('images/logo.png') }}" alt="Company name" class="w-20 h-20 mr-2">
				<span class="font-semibold text-white text-xl tracking-tight mr-5 ">Apagnan</span>
			</a>
			{# RESPONSIVE MENU #}
			<div class="block lg:hidden" id="mobile-menu">
				<button id="menu-toggle" class="flex items-center px-3 py-2 border rounded text-white border-white hover:text-white hover:border-white">
					<svg class="fill-current h-3 w-3" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
				</button>
			</div>
			<div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto hidden" id="menu-links">
				<div
					class="text-white text-sm lg:flex-grow">
					{# Home #}
					<div class="block mt-4 lg:inline-block lg:mt-0 ml-5 ">
						{% include 'components/link/link.html.twig' with {
						href: '#home',
						text: 'Home'
					} %}
					</div>
					{# REVIEWS #}
					<div class="block mt-4 lg:inline-block lg:mt-0 ml-5 ">
						{% include 'components/link/link.html.twig' with {
						href: '#reviews',
						text: 'Reviews'
					} %}
					</div>
					{# SERVICES #}
					<div class="block mt-4 lg:inline-block lg:mt-0 ml-5 ">
						{% include 'components/link/link.html.twig' with {
						href: '#services',
						text: 'Services'
					} %}
					</div>
					{# SERVICES #}	
					<div class="block mt-4 lg:inline-block lg:mt-0 ml-5 ">
						{% include 'components/link/link.html.twig' with {
						href: '#advantages',
						text: 'Advantages'
					} %}
					</div>
					{# PRICING #}
					<div class="block mt-4 lg:inline-block lg:mt-0 ml-5 ">
						{% include 'components/link/link.html.twig' with {
						href: '#pricing',
						text: 'Pricing'
					} %}
					</div>
				</div>
				<div class="w-full block flex-end lg:flex items-center lg:w-auto gap-1" id="menu-links">
					<div class="block mt-4 lg:inline-block lg:mt-0 text-white text-sm ml-5 mr-5">
						{% include 'components/link/link.html.twig' with {
							href: path('app_contact_us'),
							classes: 'text-white',
							text: 'Contact Us'
						} %}
					</div>
					{# ONLY WHEN app.user #}
					{% if (app.user) %}
						{# DASHBOARD #}
						<div class="block mt-4 lg:inline-block lg:mt-0 text-white text-sm ml-4	 ">
							{% include 'components/buttons/button_link.html.twig' with {
								content: 'Dashboard',
								link: path('app_dashboard'),
								size: 'xs',
								icon_right: 'desktop-outline'
							} %}
						</div>
						{# LOGOUT #}
						<div class="block mt-4 lg:inline-block lg:mt-0 text-white text-sm ml-4 ">
							{% include 'components/buttons/button_link.html.twig' with {
								content: 'Logout',
								link: path('app_logout'),
								size: 'xs',
								icon_right: 'log-out-outline',
								bg: 'danger'
							} %}
						</div>
					{% else %}
						{# LOGIN #}
						<div class="mt-4 ml-4 lg:mt-0 lg:ml-0">
							{% include 'components/buttons/button_link.html.twig' with {
							content: 'Login',
							link: path('app_login'),
							size: 'xs',
						} %}
						</div>
					</div>
				{% endif %}
			</div>
		</div>
	</nav>
</header>

{# TODO : Add a transition of opening/closing the burger menu on Responsive Version #}
<script>
	document.addEventListener('DOMContentLoaded', function () {
const menuToggle = document.getElementById('menu-toggle');
const mobileMenu = document.getElementById('menu-links');

menuToggle.addEventListener('click', function () {
mobileMenu.classList.toggle('hidden');
});
});
</script>
