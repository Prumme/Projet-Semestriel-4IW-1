<ul>
    {% if isSuperAdmin %}
        <h2 class="text-secondary-400 text-sm px-4 py-2">Companies</h2>
        {% for result in results.companies %}
            <a href="{{ result.url }}">
                <li class="px-4 py-2 cursor-pointer  text-primary-500 flex items-center gap-4 hover:bg-primary-200 text-xs">
                    {{ result.label }}
                </li>
            </a>
        {% else %}
            <p class="px-4 py-2 cursor-pointer  text-primary-500 flex items-center gap-4 hover:bg-primary-200 text-xs">
                No companies found
            </p>
        {% endfor %}
    {% endif %}

    <h2 class="text-secondary-400 text-sm px-4 py-2">Users</h2>
    {% for result in results.users %}
        <a href="{{ result.url }}">
            <li class="px-4 py-2 cursor-pointer  text-primary-500 flex flex-col justify-start gap-2 hover:bg-primary-200 text-xs">
                {{ result.label }}
                <div>
                    <span class="text-xs text-primary-800">{{ result.email }}</span>
                </div>
            </li>
        </a>

     {% else %}
        <p class="px-4 py-2 cursor-pointer  text-primary-500 flex items-center gap-4 hover:bg-primary-200 text-xs">
            No users found
        </p>
    {% endfor %}

    <h2 class="text-secondary-400 text-sm px-4 py-2">Invoices</h2>
    {% for result in results.invoices %}
        <a href="{{ result.url }}">
            <li class="px-4 py-2 cursor-pointer  text-primary-500 flex flex-col justify-start gap-2 hover:bg-primary-200 text-xs">
                {{ result.label }}
            </li>
        </a>
    {% else %}
        <p class="px-4 py-2 cursor-pointer  text-primary-500 flex items-center gap-4 hover:bg-primary-200 text-xs">
            No invoices found
        </p>
    {% endfor %}

    <h2 class="text-secondary-400 text-sm px-4 py-2">Quotes</h2>
    {% for result in results.quotes %}
        <a href="{{ result.url }}">
            <li class="px-4 py-2 cursor-pointer  text-primary-500 flex flex-col justify-start gap-2 hover:bg-primary-200 text-xs">
                {{ result.label }}
            </li>
        </a>
    {% else %}
        <p class="px-4 py-2 cursor-pointer  text-primary-500 flex items-center gap-4 hover:bg-primary-200 text-xs">
            No quotes found
        </p>
    {% endfor %}
    
</ul>