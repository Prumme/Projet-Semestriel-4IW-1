{% extends 'only_header.html.twig' %}

{% block title %}
    Link expired
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            {% if sended is defined %}
                <div class="col-12">
                    <h1>Link sended</h1>
                    <p>The link has been sended to the email : {{ email }}</p>
                </div>
            {% else %}
                <div class="col-12">
                    <h1>Link expired</h1>
                    <p>The link you followed has expired. Would you receive a new link to the email : {{ email }}</p>
                    <a href="{{ urlSigned.resentLink }}">Resend link</a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}