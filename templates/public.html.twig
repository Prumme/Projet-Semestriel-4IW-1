<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app_css') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="w-[100vw] h-[100vh]">
        <div class="flex w-full h-full">
        <section class="w-1/2 bg-primary-500 h-full relative overflow-hidden">
            <div class="absolute top-0 -left-1">
            {% include 'svg/mark-1.svg.twig' %}
            </div>
            <div class="absolute top-5 -right-1">
            {% include 'svg/mark-2.svg.twig' %}
            </div>
            <div class="absolute bottom-0 left-1/2 -translate-x-1/2">
            {% include 'svg/mark-3.svg.twig' %}
            </div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 flex flex-col justify-center">
                <div class="flex justify-center">
                {% include 'svg/logo.svg.twig' %}
                </div>
                <h1 class="text-white text-6xl text-center my-6 border-4 border-red-400">{% block div_title %}Welcome!{% endblock %}</h1>
                <h2 class="text-primary-300 text-2xl text-center">{% block section_paragraph %}To discover our website, please register with your personal infos{% endblock %}</h2>
            </div>
        </section>
        <div class="w-1/2">
        {% block body %}{% endblock %}
        </div>
        </div>
        {% for type, flasheMessages in app.flashes %}
            {% for message in flasheMessages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                </div>

            {% endfor %}
        {% endfor %}

    </body>
</html>
